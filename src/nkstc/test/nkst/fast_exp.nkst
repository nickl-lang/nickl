(const printf () (link "c" (proc [(param () (ptr (const (i8)))) ("...")] (i32))))

(export (const main () (proc [] (i32) [
    (call printf ["%zi^%zi=%zi\n" BASE EXP (call fast_exp [BASE EXP])])
    (return 0)
])))

(const fast_exp () (proc [(param _x (i64)) (param _n (i64))] (i64) [
    (var x () _x)
    (var n () _n)

    (var a () 1)

    (while (ne n 0) [
        (if (ne (bitand n 1) 0) [
            (assign a (mul a x))
        ] ())
        (assign n (rsh n 1))
        (assign x (mul x x))
    ])

    (return a)
]))

(const BASE () 2)
(const EXP () 24)

(call main [])

