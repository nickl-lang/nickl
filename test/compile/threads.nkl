import libc;
pt :: import pthread;

#extern("c") thread :: (arg: *void) -> *void {
    libc.printf("thread: arg='%s'\n", arg);
    libc.printf("thread: id=%li\n", pt.self());
    return cast(*void) "hello";
}

exec :: (name: *i8) -> void {
    thread_id: pt.pthread_t;
    ret: *i8;

    if pt.create(&thread_id,
           cast(*pt.pthread_attr_t) u64{0},
           thread,
           cast(*void) name) != 0 {
        libc.printf("error: pthread_create() error");
        return;
    }

    if pt.join(thread_id, cast(**void) &ret) != 0 {
        libc.printf("error: pthread_join() error");
        return;
    }

    libc.printf("exec: ret='%s'\n", ret);
}

main :: (argc: i32, argv: **i8) -> i32 {
    ${ exec("Compile time threads!"); }
    exec("Run time threads!");

    return 0;
}

c :: import compiler;
builder := c.createBuilder();
c.link(builder, pt.LIBPTHREAD);
c.build(builder, main, "threads");
c.freeBuilder(builder);
