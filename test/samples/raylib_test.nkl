import raylib;

main :: (argc: i32, argv: **i8) -> i32 {
    ScreenWidth :: 800;
    ScreenHeight :: 450;

    raylib.InitWindow(ScreenWidth, ScreenHeight, "raylib [core] example - keyboard input");

    x: i64 = ScreenWidth / 2;
    y: i64 = ScreenHeight / 2;

    raylib.SetTargetFPS(60);

    while 0 == raylib.WindowShouldClose() {
        if raylib.IsKeyDown(raylib.KEY_RIGHT) { x = x + 10; }
        if raylib.IsKeyDown(raylib.KEY_LEFT)  { x = x - 10; }
        if raylib.IsKeyDown(raylib.KEY_UP)    { y = y - 10; }
        if raylib.IsKeyDown(raylib.KEY_DOWN)  { y = y + 10; }

        WHITE    :: 4294967295; // 0xffffffff
        MAROON   :: 4281802430; // 0xff371ebe
        DARKGRAY :: 4283453520; // 0xff505050

        radius: f32 = 1112014848; // 50.0f

        raylib.BeginDrawing();
            raylib.ClearBackground(WHITE);
            raylib.DrawCircle(x, y, radius, MAROON);
            raylib.DrawFPS(10, 10);
            raylib.DrawText("move the ball with arrow keys", 10, 30, 20, DARKGRAY);
        raylib.EndDrawing();
    }

    raylib.CloseWindow();
}

import compiler;
compiler.buildExecutable(
    main,
    "./raylib_test_build/",
    "raylib_test",
);

main();
